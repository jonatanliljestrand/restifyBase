{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "mocha",
            "chai"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "files": [
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
