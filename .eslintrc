{
    "extends": "airbnb-base",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "env": {
        "browser":false,
        "mocha": true,
        "node": true
    },
    "parser": "typescript-eslint-parser",
    "rules": {
        "indent": ["error", 4],
        "import/no-extraneous-dependencies": [
            2, 
            {
            "devDependencies": true
            }
        ]
    }
}